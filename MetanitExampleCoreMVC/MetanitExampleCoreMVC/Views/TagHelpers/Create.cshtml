
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@model MetanitExampleCoreMVC.Models.Phone

<h2>Добавление телефона</h2>

<form asp-action="Create" asp-controller="TagHelpers" asp-antiforgery="true">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Price"></label>
            <input type="number" asp-for="Price" />
        </div>
        <div>
            <label asp-for="CompanyId"></label>
            <select asp-for="CompanyId" asp-items="ViewBag.Companies"></select>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>

<label asp-for="Name"></label>
<input type="text" asp-for="Name" />
<span asp-validation-for="Name" />