@model IndexPageViewModel
@{
    ViewData["Title"] = "Pagination";
}

<h2>Pagination</h2>

<table class="table">
    <tr><th>Имя</th><th>Возраст</th><th>Компания</th></tr>
    @foreach (var u in Model.Users)
    {
        <tr><td>@u.Name</td><td>@u.Age</td><td>@u.Company.Name</td></tr>
    }
</table>
<page-link page-model="Model.PageViewModel" page-action="Pagination"></page-link>
